{
    "compilerOptions": {
        "rootDir": "./src",
        "target": "ES2020",
        "module": "ESNext",
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "allowJs": false,
        "skipLibCheck": true,   
    },
    "include": [
        "src",
    ]
}